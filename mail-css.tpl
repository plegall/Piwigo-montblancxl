* {ldelim} margin: 0; padding: 0; border: 0; }

body {ldelim}
  font-size:0.7em; font-family: Verdana,Arial,Helvetica,sans-serif; color: black;
  background: white;
}
#the_page {ldelim}
  /* background: transparent url({$ROOT_URL}themes/montblancxl/img/header.jpg) no-repeat left top; */
